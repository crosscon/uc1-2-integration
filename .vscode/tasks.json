{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "buildroot: sync sources",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/buildroot_sync_src.sh",
      "problemMatcher": []
    },
    {
      "label": "buildroot: generate keys",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/buildroot_ta_key_gen.sh",
      "problemMatcher": []
    },
    {
      "label": "buildroot: generate certs",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/buildroot_ta_cert_gen.sh",
      "problemMatcher": []
    },
    {
      "label": "buildroot: deploy binaries",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/buildroot_deploy_bins.sh",
      "dependsOn": [
        "buildroot: sync sources"
      ],
      "problemMatcher": []
    },
    {
      "label": "buildroot: setup target",
      "dependsOn": [
        "buildroot: generate keys",
        "buildroot: generate certs"
      ],
      "problemMatcher": [],
      "dependsOrder": "sequence"
    },
    {
      /*All in one task: builds mtls, transfers apps to target, set ups keys.*/
      "label": "buildroot: do all",
      "dependsOn": [
        "buildroot: deploy binaries",
        "buildroot: setup target"
      ],
      "problemMatcher": [],
      "dependsOrder": "sequence"
    },
    {
      "label": "nxp: sync common",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/nxp_sync_common.sh",
      "problemMatcher": []
    }
  ]
}
